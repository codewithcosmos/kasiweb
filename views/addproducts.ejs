<!-- views/addProduct.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <h1>Add a New Product</h1>
    <form action="/products/add" method="POST">
        <label for="name">Name: Basic website:</label>
        <input type="text" id="name" name="name" required>
        <label for="description">Description: This is a simple start up website that has limited functionality, header menu, a board, and footer but not limited. for more info, discuss with your web designer</label>
        <textarea id="description" name="description" required></textarea>
        <label for="price">Price: R350.00</label>
        <input type="number" id="price" name="price" required>
        <label for="category">Category:Web design</label>
        <input type="text" id="category" name="category" required>
        <label for="image">Image URL:<img src="/public/images/website.jpg" alt="Product 1">
        </label>
        <input type="text" id="image" name="image">
        <button type="submit">Add Product</button>
    </form>
    <script src="script.js"></script>
</body>
</html>
