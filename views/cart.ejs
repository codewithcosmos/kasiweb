<!-- views/cart.ejs -->
<%- include('layout', { title: 'Cart', body: body }) %>

<h1>Shopping Cart</h1>
<% if (cart.items.length > 0) { %>
    <ul>
        <% cart.items.forEach(item => { %>
            <li>
                <%= item.product.name %> - Quantity: <%= item.quantity %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>Your cart is empty</p>
<% } %>
