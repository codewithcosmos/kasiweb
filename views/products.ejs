<!-- views/products.ejs -->
<%- include('layout', { title: 'Products', body: body }) %>

<h1>Product List</h1>
<div id="products-container">
    <% if (products.length > 0) { %>
        <ul>
            <% products.forEach(product => { %>
                <li>
                    <%= product.name %> - Price: <%= product.price %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No products available</p>
    <% } %>
</div>
